<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0">
	<info
		organisation="${maven.group}"
		module="${maven.artifact}"
		revision="${version}"
		status="release"
		default="true" />
	<configurations>
		<conf name="distribution" visibility="public" />
		<conf name="compile" visibility="public" extends="distribution" />
	</configurations>
	<dependencies>
		<dependency org="com.threecrickets.scripturian" name="scripturian" rev="1.1+" conf="distribution->default" />
		<dependency org="com.threecrickets.jvm" name="json-jvm" rev="1.1+" conf="distribution->default" />
		<dependency org="org.apache.commons" name="commons-vfs" rev="1.0+" conf="distribution->default" />
		<dependency org="org.apache.commons" name="commons-logging" rev="1.1+" conf="distribution->default" />
		<dependency org="org.jsoup" name="jsoup" rev="1.8+" conf="distribution->default" />
		<dependency org="org.mozilla" name="rhino" rev="1.7R4" conf="distribution->default" />
		
		<!-- For compilation only -->
		<dependency org="org.apache.logging.log4j" name="log4j-api" rev="2.0+" conf="compile->default" />
		<dependency org="org.apache.logging.log4j" name="log4j-core" rev="2.0+" conf="compile->default" />
		<dependency org="org.mongodb" name="mongodb-driver" rev="3.0+"  conf="compile->default" />
		<dependency org="org.apache.ant" name="ant" rev="1.8+" conf="compile->default" /> <!-- Note: When invoking Ant through the Maven Ant plugin we cannot use the includeAntRuntime attributes in the javac task -->
		<!-- <dependency org="jdk.nashorn" name="nashorn-backport" rev="latest.integration" conf="compile->default" /> -->
	</dependencies>
</ivy-module>
