#!/bin/bash

RUN=/Depot/Projects/Collaborative/Sincerity/container/run
CONTAINER="$RUN/.."

JVM_SWITCHES=$(echo "$JVM_SWITCHES" \
-Dcatalina.home="$CONTAINER/catalina" \
-Dcatalina.base="$CONTAINER/configuration/tomcat" \
-Dcatalina.config="file://$CONTAINER/configuration/tomcat/catalina.properties") \
"$RUN/sincerity-default" \
add org.apache.tomcat tomcat-catalina-ha 7.0.22 : \
bootstrap org.apache.catalina.startup.Bootstrap "$@" 

